.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      .side-bar__user-name__top-items__name
        = current_user.name
      .side-bar__user-name__top-items__icons
        = link_to new_group_path, class: "side-bar__user-name__top-items__icons--btn" do
          = icon('fas', 'edit', class: "side-bar__btn--icon")
        = link_to edit_user_path(current_user), class: "side-bar__user-name__top-items__icons--btn" do
          = icon('fas', 'cog', class: "side-bar__btn--icon")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group-message
        = link_to group_messages_path(group), class: "side-bar__group-list__group-message" do
          .side-bar__group-list__group-message__group-name
            = group.name
          .side-bar__group-list__group-message__group-new-message
            = group.show_last_message
            